<!DOCTYPE html>
<html ng-app="codefinder">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <div id="page">
        <header class="header">
            <!-- Static navbar -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="pull-left logo">
                            <img class="pull-left" src="~/Content/images/logo.png" />
                            <label class="">Code Finder</label>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                        </ul>

                        @*<ul class="nav navbar-nav navbar-right">
                            <li class="active"><a href="./">Default</a></li>
                            <li><a href="../navbar-static-top/">Static top</a></li>
                            <li><a href="../navbar-fixed-top/">Fixed top</a></li>
                        </ul>*@

                        <div class="navbar-nav navbar-right ">
                            <ul class="nav navbar-nav list-unstyled list-inline">
                                <li><a href="#signup"><span class="">Signup</span></a></li>
                                <li><a href="#signin"><span class="">Signin</span></a></li>
                                <li><a href="#help"><span class="">Help</span></a></li>
                            </ul>
                            <div class="searchbox-cont pull-left">
                                <input class="searchbox" type="text" value="" placeholder="Search content" />
                                <span class="glyphicon glyphicon-search"></span>
                            </div>
                        </div>
                    </div>
                    <!--/.nav-collapse -->
                </div>
                <!--/.container-fluid -->
            </div>
        </header>

        <div id="content" class="container">
            @RenderBody()
        </div>
        <footer>
            <div class="container">
                <ul class="list-unstyled list-inline">
                    <li><a href="#">tour</a></li>
                    <li><a href="#">help</a></li>
                    <li><a href="#">blog</a></li>
                    <li><a href="#">chat</a></li>
                    <li><a href="#">legal</a></li>
                    <li><a href="#">privacy</a></li>
                    <li><a href="#">contact</a></li>
                    <li><a href="#">about us</a></li>
                    <li><a href="#">feedback</a></li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/boot")
    @Scripts.Render("~/bundles/homepage")

</body>
</html>
